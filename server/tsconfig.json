{
  "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "forceConsistentCasingInFileNames": true,
      "lib": ["ES2017"],
      "module": "node16",
      "target": "ES2018",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node16",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}